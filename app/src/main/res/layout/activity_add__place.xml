<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Add_Place">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/baloo"
                android:text="Place Address :"
                android:textColor="@color/black"/>


            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_line"
                android:drawablePadding="12dp"
                android:fontFamily="@font/aclonica"
                android:hint="City"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColorHint="#8F8585"
                android:textSize="18sp" />
            <EditText

                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:background="@drawable/border_line"

                android:drawablePadding="12dp"
                android:fontFamily="@font/aclonica"
                android:hint="State"
                android:inputType="textPersonName"

                android:padding="10dp"

                android:textColorHint="#8F8585"
                android:textSize="18sp" />

            <EditText

                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:background="@drawable/border_line"

                android:drawablePadding="12dp"
                android:fontFamily="@font/aclonica"
                android:hint="Country"
                android:inputType="textPersonName"

                android:padding="10dp"

                android:textColorHint="#8F8585"
                android:textSize="18sp" />

            <EditText

                android:id="@+id/postalcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:background="@drawable/border_line"

                android:drawablePadding="12dp"
                android:fontFamily="@font/aclonica"
                android:hint="Postal Code"
                android:inputType="textPersonName"

                android:padding="10dp"

                android:textColorHint="#8F8585"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#CDCDCD">
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/baloo"
                android:text="Place Details :"
                android:textColor="@color/black">
                ></TextView>

            <EditText

                android:id="@+id/placename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_line"

                android:drawablePadding="12dp"

                android:focusedByDefault="true"
                android:fontFamily="@font/aclonica"
                android:hint="Place Name"
                android:inputType="textPersonName"

                android:padding="10dp"

                android:textColorHint="#8F8585"
                android:textSize="18sp" />

            <EditText

                android:id="@+id/placedescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:background="@drawable/border_line"

                android:drawablePadding="12dp"
                android:fontFamily="@font/aclonica"
                android:hint="Place Description"
                android:inputType="textShortMessage|textLongMessage|textMultiLine|textPersonName"

                android:padding="10dp"

                android:textColorHint="#8F8585"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                >

            </Spinner>

            <Button
                android:id="@+id/add_photos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_btn"
                android:text="Add Photos"
                app:backgroundTint="@null" />

            <ImageView
                android:id="@+id/placeimg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:contentDescription="TODO" />

            <Button
                android:id="@+id/addplace"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/border_btn"
                android:text="add place"
                app:backgroundTint="@null">

            </Button>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>